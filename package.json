{
  "name": "@replit/river",
  "sideEffects": false,
  "description": "It's like tRPC but... with JSON Schema Support, duplex streaming and support for service multiplexing. Transport agnostic!",
  "version": "0.2.0",
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@sinclair/typebox": "^0.31.8",
    "isomorphic-ws": "^5.0.0",
    "it-pushable": "^3.2.1",
    "nanoid": "^4.0.2",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.5",
    "prettier": "^3.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vitest": "^0.34.3"
  },
  "scripts": {
    "check": "tsc --noEmit && npx prettier . --check",
    "format": "npx prettier . --write",
    "build": "tsc",
    "prepack": "npm run build",
    "release": "npm publish --access public",
    "test": "vitest",
    "bench": "vitest bench --reporter='verbose'"
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "rpc",
    "websockets",
    "jsonschema"
  ],
  "author": "Jacky Zhao",
  "license": "MIT"
}
